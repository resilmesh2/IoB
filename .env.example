# Attack Flow System Environment Configuration Example
# Copy this file to .env and modify as needed

# Debug Mode (true/false)
DEBUG=false

# Storage Paths (container paths - do not modify)
STORAGE_PATH=/app/alerts
STIX_STORAGE_PATH=/app/stix_bundles

# Application Ports (modify if ports conflict on your system)
ATTACKFLOW_BUILDER_PORT=8080
SANIC_WEB_SERVER_PORT=8000
STIX_MODELER_PORT=3000

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=attackflow